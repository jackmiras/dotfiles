# Automatically Running PHPUnit.
function phpunit-watcher {
    run="clear && printf '\e[3J' && vendor/bin/phpunit"
    [[ -n $@ ]] && args=$@ || args="tests"

    eval "$run $args"
    watchman-make \
        -p 'src/**/*.php' 'tests/**/*.php' \
        --make=$run \
        -t "$args" 
}
